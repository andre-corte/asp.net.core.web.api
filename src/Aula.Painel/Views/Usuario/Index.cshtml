@model IList<UsuarioModel>
@{
    ViewData["Title"] = "Meus usuários";
}

<a href="@Url.Action("cadastrar", "usuario")" class="btn btn-outline-primary float-right text-right" style="float: right;text-align: right;">Adicionar</a>
<h1 class="bd-title">@ViewData["Title"]</h1>
<hr />

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">Código</th>
            <th scope="col" class="text-center">Nome</th>
            <th scope="col" class="text-center">Ativo</th>
            <th scope="col" class="text-center">Email</th>
            <th scope="col" class="text-center">Data de Cadastro</th>
            <th scope="col" class="text-center">Responsável Cadastro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    <a href="@Url.Action("detalhe", "usuario", new { id = item.Id })" class="btn btn-dark btn-sm">Detalhe</a>
                    <a href="@Url.Action("atualizar", "usuario", new { id = item.Id })" class="btn btn-primary btn-sm">Editar</a>
                    <a href="@Url.Action("delete", "usuario", new { id = item.Id })" class="btn btn-danger btn-sm">Excluir</a>
                </td>
                <td scope="row" class="text-center">@item.Id</td>
                <td>@item.Nome</td>
                <td class="text-center">@(item.Ativo ? "Sim" : "Não")</td>
                <td>@item.Email</td>
                <td class="text-center">@item.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.ResponsavelCadastro</td>
            </tr>
        }
    </tbody>
</table>
