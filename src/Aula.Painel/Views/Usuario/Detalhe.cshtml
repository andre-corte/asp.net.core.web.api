@model UsuarioModel 
@{
    ViewData["Title"] = "Detalhe do usuário";
}

<a href="@Url.Action("index", "usuario")" class="btn btn-outline-warning float-right text-right" style="float: right;text-align: right;">Voltar</a>
<h1 class="bd-title">@ViewData["Title"]</h1>
<hr />

<form>
    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" readonly value="@Model.Nome" aria-describedby="emailHelp" placeholder="Informe seu nome">
    </div>
    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" readonly value="@Model.Email" aria-describedby="emailHelp" placeholder="Informe seu email">
    </div>
    <div class="form-group mb-2">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" class="form-control" id="Senha" name="Senha" readonly value="@Model.Senha" placeholder="Informe sua senha">
    </div>
    <div class="mb-2">
        @Html.CheckBoxFor(x => x.Ativo, new { id = "Ativo", name = "Ativo", @class = "check-input", @readonly = true })
        <label class="form-check-label" for="Ativo">Ativo</label>
    </div>
</form>


