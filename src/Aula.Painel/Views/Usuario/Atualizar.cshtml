@model UsuarioModel
@{
    ViewData["Title"] = "Atualizar usuário";
}

<a href="@Url.Action("index", "usuario")" class="btn btn-outline-warning float-right text-right" style="float: right;text-align: right;">Voltar</a>
<h1 class="bd-title">@ViewData["Title"]</h1>
<hr />

<form action="@Url.Action("atualizar", "usuario")" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" value="@Model.Id" id="Id" name="Id" />
    <input type="hidden" value="@Model.ResponsavelCadastro" id="ResponsavelCadastro" name="ResponsavelCadastro" />
    <input type="hidden" value="@Model.DataCadastro" id="DataCadastro" name="DataCadastro" />

    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" aria-describedby="emailHelp" placeholder="Informe seu nome">
    </div>
    <div class="form-group mb-2">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" aria-describedby="emailHelp" placeholder="Informe seu email">
    </div>
    <div class="form-group mb-2">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" class="form-control" id="Senha" name="Senha" value="@Model.Senha" placeholder="Informe sua senha">
    </div>
    <div class="mb-2">
        @Html.CheckBoxFor(x => x.Ativo, new { id = "Ativo", name = "Ativo", @class = "check-input" })
        <label class="form-check-label" for="Ativo">Ativo</label>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>

    @if (ViewData["erro"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @ViewData["erro"]
        </div>
    }

    @if (ViewData["sucesso"] != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            @ViewData["sucesso"]
        </div>
    }
</form>


